{
  "extends": [
    "tslint:latest",
    "tslint-config-prettier"
  ],
  "rules": {
    "no-console": false,
    "variable-name": [
      true,
      "allow-leading-underscore"
    ],
    "no-submodule-imports": false,
    "object-literal-sort-keys": false
  },
  "linterOptions": {
    "exclude": [
      "src/grammar/grammars/**/*",
      "src/grammar/gen/**/*"
    ]
  }
}