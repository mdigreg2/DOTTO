# Maintainer: Rescribe <rescribe.dev@gmail.com>

pkgname=rescribe
# update version in package.json, not here
pkgver=
pkgrel=1
epoch=
pkgdesc="code search engine cli"
arch=("x86_64")
url="https://rescribe.dev"
license=("CC-BY-NC-SA-4.0")
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=("!strip")
install=$pkgname.install
changelog=
source=("https://cli.rescribe.dev/linux.zip")
noextract=()
md5sums=()
validpgpkeys=()

package() {
  mkdir "$pkgdir/usr"
  mkdir "$pkgdir/usr/bin"
  chmod +x rescribe
  mv rescribe "$pkgdir/usr/bin"
  mv nodegit.node "$pkgdir/usr/bin"

  ./add_completion $pkgdir
}
